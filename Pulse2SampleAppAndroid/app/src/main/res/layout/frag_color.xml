<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:windowSoftInputMode="stateHidden">


    <LinearLayout
        android:id="@+id/main_layout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="2dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:text="Color Splash allows you to set the color of your Pulse 2. Simply Tap a color from the pallet below and see it reflected on a conncected Pulse 2’s LED Display."
            android:id="@+id/textView"
            android:layout_marginRight="2dp" />

        <ImageView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:background="#a1a1a1" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent">

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switchBroadcast"
                android:checked="false"
                android:text="Rebroadcast"
                android:layout_marginLeft="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To Rebrodcast the pattern to other nearby Pulse 2’s select the Brodcast button above."
                android:id="@+id/textView2"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hex Color:"
                    android:id="@+id/textView3"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textColor"
                    android:layout_marginLeft="2dp"
                    android:gravity="center"
                    android:background="@drawable/shape_reg" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">
    </LinearLayout>

</LinearLayout>